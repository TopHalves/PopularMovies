<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/colorPrimaryLight">

    <TextView
        android:id="@+id/trailer_title_tv"
        android:layout_width="204dp"
        android:layout_height="38dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/play_ib"
        app:layout_constraintTop_toTopOf="@+id/play_ib"
        tools:text="Trailer Title"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        style="@style/Base.TextAppearance.AppCompat.Button"/>

    <ImageButton
        android:id="@+id/play_ib"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:scaleType="fitXY"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_play_arrow_black_24px"
        style="@style/Base.TextAppearance.AppCompat.Caption"/>

    <ImageButton
        android:id="@+id/share_ib"
        android:layout_width="68dp"
        android:layout_height="68dp"

        android:background="@color/colorAccent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="@+id/play_ib"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_share_black_24px" />

    <TextView
        android:id="@+id/trailer_site_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/trailer_title_tv"
        tools:text="Trailer Site"
        android:layout_marginTop="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/trailer_title_tv" />
</android.support.constraint.ConstraintLayout>